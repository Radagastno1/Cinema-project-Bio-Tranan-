@model TrananMVC.ViewModel.CreatedReservationViewModel

@{
    ViewData["Title"] = "Din reservation";
}

<div class="text-container">
<div class="receipt">
  <h2>Din reservation</h2>
  <p>Film: @Model.MovieTitle</p>
  <p>Dag: @Model.DateAndTime.ToShortDateString()</p>
  <p>Tid: @Model.DateAndTime.ToString("HH:mm")</p>
  <p>Pris: @Model.Price kr</p>
  <p>Salong: @Model.TheaterName</p>
  <p>Namn: @Model.FirstName @Model.LastName</p>
  <p>Telefonnummer: @Model.PhoneNumber</p>
  @foreach (var seat in Model.ReservedSeats)
  {
    <p>Rad:@seat.Row Stolnummer:@seat.SeatNumber</p>
  }
   <div class="reservation-code">
    <p>Din bokningsbekräftelse:</p>
    <h1>@Model.ReservationCode</h1>
    <p>Spara koden för att hämta ut dina biljetter i kassan.</p>
  </div>
</div>
  <button type="button" id="button" onclick="sendEmail()">Skicka kopia på mail</button>
  <button type="button" id="button" onclick="sendSms()">Skicka kopia på sms</button>
  <a asp-controller="reservation" asp-action="Cancel" asp-route-reservationId=@Model.ReservationId><button type="button" id="cancel-button">Ångra</button></a>
</div>
</div>


