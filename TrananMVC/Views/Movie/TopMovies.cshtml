@model List<TrananMVC.ViewModel.MovieViewModel>

<div class="text-container">
    <h2>Top Femman</h2>

    @if (!Model.Any())
    {
        <h4>Det verkar inte som att någon har lämnat omdömen än.</h4>
    }
    else
    {
        <table>
            <tr>
                <th>Film</th>
                <th>Stjärnor</th>
            </tr>

            @foreach (var movie in Model.Take(5))
            {
                <tr>
                    <td>
                        <div class="movie-poster">
                            <a asp-controller="Movie" asp-action="Details" asp-route-movieId="@movie.Id">
                                <img src="@Html.Raw(movie.ImageUrl)" />
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="star-icons">
                            @for (int i = 0; i < Math.Round(movie.Reviews.Average(r => r.Rating)); i++)
                            {
                                <img src="https://icon-library.com/images/movie-star-icon/movie-star-icon-20.jpg" id="icon" />
                            }
                        </div>
                    </td>
                </tr>
            }
        </table>

    }

</div>

